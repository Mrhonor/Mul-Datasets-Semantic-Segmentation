{
  "model_name": "hrnet_w48",
  "aux_mode": "train",
  "n_datasets": 3,
  "num_unify_classes": 46,
  "hrnet": {
    "cfg": "hrnet48",
    "keep_imagenet_head": false,
    "drop_stage4": false,
    "full_res_stem": false
  },
  "dataset1": {
    "n_cats": 20,
    "data_reader": "CityScapes",
    "im_root": "/data2/datasets",
    "train_im_anns":"datasets/Cityscapes/train.txt",
    "val_im_anns":"datasets/Cityscapes/val.txt", 
    "ims_per_gpu": 6,
    "eval_ims_per_gpu": 2
  },
  "dataset2": {
    "n_cats": 13, 
    "data_reader": "CamVid",
    "im_root": "/data2/datasets/CamVid",
